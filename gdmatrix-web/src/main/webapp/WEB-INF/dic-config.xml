<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.1//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_1.dtd">

<faces-config xmlns="http://java.sun.com/JSF/Configuration">
  
  <application>
    <resource-bundle>
      <base-name>org.santfeliu.dic.web.resources.DictionaryBundle</base-name>
      <var>dicBundle</var>
    </resource-bundle>
  </application>
  
  <managed-bean>
    <managed-bean-name>typeBean</managed-bean-name>
    <managed-bean-class>org.santfeliu.dic.web.TypeBean</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>typeSearchBean</managed-bean-name>
    <managed-bean-class>org.santfeliu.dic.web.TypeSearchBean</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>typeTreeBean</managed-bean-name>
    <managed-bean-class>org.santfeliu.dic.web.TypeTreeBean</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>typeMainBean</managed-bean-name>
    <managed-bean-class>org.santfeliu.dic.web.TypeMainBean</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>typePropertiesBean</managed-bean-name>
    <managed-bean-class>org.santfeliu.dic.web.TypePropertiesBean</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>typeACLBean</managed-bean-name>
    <managed-bean-class>org.santfeliu.dic.web.TypeACLBean</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>enumTypeBean</managed-bean-name>
    <managed-bean-class>org.santfeliu.dic.web.EnumTypeBean</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>enumTypeSearchBean</managed-bean-name>
    <managed-bean-class>org.santfeliu.dic.web.EnumTypeSearchBean</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>enumTypeMainBean</managed-bean-name>
    <managed-bean-class>org.santfeliu.dic.web.EnumTypeMainBean</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>enumTypeItemsBean</managed-bean-name>
    <managed-bean-class>org.santfeliu.dic.web.EnumTypeItemsBean</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <navigation-rule>
    <from-view-id>*</from-view-id>

    <navigation-case>
      <from-outcome>type_search</from-outcome>
      <to-view-id>/common/dic/type_search.xhtml</to-view-id>
    </navigation-case>

    <navigation-case>
      <from-outcome>type_tree</from-outcome>
      <to-view-id>/common/dic/type_tree.xhtml</to-view-id>
    </navigation-case>

    <navigation-case>
      <from-outcome>type_main</from-outcome>
      <to-view-id>/common/dic/type_main.xhtml</to-view-id>
    </navigation-case>

    <navigation-case>
      <from-outcome>type_properties</from-outcome>
      <to-view-id>/common/dic/type_properties.xhtml</to-view-id>
    </navigation-case>

    <navigation-case>
      <from-outcome>type_acl</from-outcome>
      <to-view-id>/common/dic/type_acl.xhtml</to-view-id>
    </navigation-case>

    <navigation-case>
      <from-outcome>enum_type_search</from-outcome>
      <to-view-id>/common/dic/enum_type_search.xhtml</to-view-id>
    </navigation-case>

    <navigation-case>
      <from-outcome>enum_type_main</from-outcome>
      <to-view-id>/common/dic/enum_type_main.xhtml</to-view-id>
    </navigation-case>

    <navigation-case>
      <from-outcome>enum_type_items</from-outcome>
      <to-view-id>/common/dic/enum_type_items.xhtml</to-view-id>
    </navigation-case>

  </navigation-rule>
</faces-config>
